# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://anpr_user:anpr_pass@localhost:5432/anpr_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=anpr_db
DB_USER=anpr_user
DB_PASSWORD=anpr_pass

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_HOSTS=http://localhost:3000,http://127.0.0.1:3000

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.mp4,.avi

# Vision Processing Configuration
YOLO_MODEL_PATH=models/yolov11_anpr.pt
OCR_MODEL_PATH=models/ocr_model.onnx
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.4

# Video Processing Configuration
MAX_CONCURRENT_STREAMS=4
FRAME_BUFFER_SIZE=10
PROCESSING_FPS=30.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/anpr.log

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
